@model Rumo.Models.Aet

@{
    ViewData["Title"] = "Details";
    var versersList = ViewData["Versers"] as List<Verser>;
}

<h1>Details</h1>

<div>
    <h4>Aet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Plate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sigla)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sigla)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id"><button class="btn btn-secondary">Edit</button></a> |
    <a asp-action="Index"><button class="btn btn-secondary">Back</button></a> |
    <a asp-controller="Verser" asp-action="Create" asp-route-id="@Model?.id"><button class="btn btn-secondary">Adicionar um Veiculo no verso</button></a>
</div>

<br>
<p><Strong>Veiculos no verso</Strong></p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(versersList => versersList.Vehicle)
            </th>
            <th>
                @Html.DisplayNameFor(versersList => versersList.Vehicle.DuoDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (versersList != null) { 
@foreach (var item in versersList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.Plate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle.DuoDate)
            </td>
            <td>
                <a style="text-decoration: none; color: inherit;" asp-controller="Verser" asp-action="Edit" asp-route-id="@item.id"><button class="btn btn-secondary">Edit</button></a> |
                <a style="text-decoration: none; color: inherit;" asp-controller="Verser" asp-action="Details" asp-route-id="@item.id"><button class="btn btn-secondary">Details</button></a> |
                <a style="text-decoration: none; color: inherit;" asp-controller="Verser" asp-action="Delete" asp-route-id="@item.id"><button class="btn btn-secondary">Delete</button></a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
