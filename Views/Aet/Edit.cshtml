@model Rumo.Models.Aet

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Aet</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="display: flex; flex-direction: column; gap: 5px;">
        <form asp-action="Edit" style="display: flex; flex-direction: column; gap: 5px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <input asp-for="VehicleId" class="form-control" readonly>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Sigla" class="control-label"></label>
            <input type="text" asp-for="Sigla" class="form-control" readonly/>
            <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index"><button class="btn btn-secondary">Back to List</button></a>
        </div>
    </div>
</div>

