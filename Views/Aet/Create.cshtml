@model Rumo.Models.Aet

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Aet</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="display: flex; flex-direction: column; gap: 5px;">
        <form asp-action="Create" style="display: flex; flex-direction: column; gap: 5px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class ="form-control" asp-items="ViewBag.VehicleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sigla" class="control-label"></label>
                <select asp-for="Sigla" class ="form-control">
                    <option value="FD">FD</option>
                    <option value="SP">SP</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index"><button class="btn btn-secondary">Back</button></a>
        </div>
    </div>
</div>

