@model Rumo.Models.Verser

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div style="display: flex; flex-direction: column; gap: 5px;">
    <h4>Verser</h4>
    <hr />
    <dl class="row" >
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Plate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a asp-controller="Aet" asp-action="Details" asp-route-id="@Model?.AetId"><button class="btn btn-secondary" asp-controller="Aet" asp-action="Details" asp-route-id="@Model?.AetId">Back</button></a>
</div>
