@model Rumo.Models.Verser

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Verser</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="display: flex; flex-direction: column; gap: 5px;">
        <form asp-action="Edit" style="display: flex; flex-direction: column; gap: 5px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <input type="hidden" asp-for="AetId" class="form-control" asp-items="ViewBag.AetId"></select>
                <span asp-validation-for="AetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-controller="Aet" asp-action="Details" asp-route-id="@Model?.AetId"><button class="btn btn-secondary">Back</button></a>
        </div>
    </div>
</div>



